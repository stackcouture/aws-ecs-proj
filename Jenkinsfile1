@Library('my-shared-lib') _

pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', daysToKeepStr: '30')) 
        disableConcurrentBuilds() 
        wsCleanup() 
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        TF_DIR             = 'ecs-terraform'
        GIT_URL            = "https://github.com/stackcouture/aws-ecs-proj.git"
        GIT_BRANCH         = 'main'
    }

    stages {

        stage('Git Checkout') {
            steps {
                    checkoutGit(env.GIT_BRANCH, env.GIT_URL, 'github-cred')
            }
        }

        stage('Terraform Destroy') {
            steps {
                terraformDestroy(
                    tfDir: env.TF_DIR,
                    awsCred: 'aws-credentials-id',
                    awsRegion: env.AWS_DEFAULT_REGION,
                    approvalMessage: 'Approve Terraform destroy for ECS resources?'
                )
            }
        }
    }

    post {
        always {
            cleanupWorkspace(tfDir: env.TF_DIR)
        }
    }
}